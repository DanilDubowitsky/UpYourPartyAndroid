<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button.Normal" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/nunito_sans_semibold</item>
    </style>

    <style name="Text.Title" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/nunito_sans_semibold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="Text.Description" parent="Text.Title">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="Text.Title.Large" parent="Text.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Title.Small" parent="Text.Title">
        <item name="android:textSize">8sp</item>
        <item name="android:letterSpacing">0.06</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="EditText.Round" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/nunito_sans_semibold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:textColor">@color/halfBlack</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">11dp</item>
        <item name="android:background">@drawable/drawable_edit_text_round</item>
    </style>

</resources>